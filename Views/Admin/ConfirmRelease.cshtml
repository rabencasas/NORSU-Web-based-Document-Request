@{
    Layout = "_LayoutAdmin";
}

<div class="container text-center">
    
    <div class="row text-center">
        <h1 class="display-4 text-center">Confirm <b>Release</b>> of Document Request</h1>
    </div>
   <div class="row mb-3">
        <p class="lead mb-3">
            Click the <b>Confirm</b> button to release the requested document <br>
            otherwise click the <b>Cancel</b> button.
        </p>
   </div>

    <p>
        <b>Reference Number: @ViewData["id"]</b>
        <h3>Request Type: @ViewData["type"]</h3>
        <cite>Filedate: @ViewData["filedate"]</cite>
    </p>

    <div class="row text-center">
        <form asp-controller="Student" asp-action="ReleaseRequest" method="POST" class="text-center">
            <input type="hidden" name="id" value="@ViewData["id"]">
            <button class="btn btn-outline-primary" type="submit"><b>Confirm</b></button>        
            <a class="btn btn-outline-info" asp-action="Home"><b>Cancel</b></a>
        </form>
    </div>
</div>