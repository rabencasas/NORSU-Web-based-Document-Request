@{
    Layout = "_LayoutAdmin";
    ViewData["title"] = "Search Request";
}
@model NGODP.Models.Request

<div class="container">

    <div class="row mb-5 text-muted">
        <h4 class="display-4 text-muted">Search Request</h4>
    </div>

    <div class="row" style="margin-bottom: 3rem;">
        <form class="form-inline my-2 my-lg-0" asp-action="SearchRequest" method="POST">
            <input class="form-control mr-sm-2" type="text" placeholder="Enter request number" aria-label="Search" name="Id">
            <button class="btn btn-outline-primary   my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>

    @{
        if (Model.Refno != "x" && Model.Refno != "z")
        {
            <div class="row mb-4">
                <span class="h5 border-bottom border-gray pb-2 mb-0">Search result: </span>
            </div>

            <div class="row bg-light mb-2">
                <div class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="ml-3 text-gray-dark">@Model.Type</strong>
                <a class="mr-4 pt-2" asp-action="ManageRequest" asp-route-id="@Model.Refno">View</a>
                </div>
                <span class="ml-3 d-block"><b>@Model.Student</b></span>
                <span class="ml-3 d-block">@Model.Purpose</span>
                <span class="ml-3 d-block">@Model.Status</span>
            </div>
            </div>
        }
        else
        {
           @if (Model.Refno == "x")
           {
                <h5 class="text-danger">No request was found from the database.</h5>               
           }
        }
    }
</div>