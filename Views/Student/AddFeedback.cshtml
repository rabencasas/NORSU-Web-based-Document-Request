@{
    Layout = "_LayoutStudent";
    ViewData["title"] = "Add another user";
}

<div class="container">

    <div class="row mb-2">
        <span class="display-4 text-primary">Your Feedback</span>
    </div>

        <div class="row mb-5">
        <h3 class="text-success">
            @ViewData["msg"]
        </h3>
    </div>

    <div class="row">
        <form asp-action="AddFeedback" method="POST">
    </div>

    <div class="row col-md-12 mb-4">
        <input type="hidden" name="Id" value="@ViewData["id"]">
        <label class="text-muted"><b>Enter your feedback message below:</b></label>
        <textarea class="form-control" style="height: 300px;" name="Message"></textarea>
    </div>

    <div class="row mb-3 cold-md-6">
        <div class="row ml-3">
            <button type="submit" class="btn btn-md btn-success">Submit Feedback</button>
        </div>
    </div>

    <div class="row">
        </form>
    </div>
</div>